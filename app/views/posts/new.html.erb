<div class="make-form">
  <%= form_for(@post) do |f| %>
    <div class="form-group content">
      <%= f.label :content%>
    </div>
    <div class="form-group">
      <%= f.text_area :content %>
    </div>
    <div class="button">
      <%= f.submit "Create Article", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
